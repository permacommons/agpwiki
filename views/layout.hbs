<!doctype html>
<html lang="{{locale}}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="{{{assets.siteCss}}}" />
  </head>
  <body>
    {{> header}}
    {{{topHtml}}}
    <div class="page-layout{{#unless hasSidebar}} single{{/unless}}">
      <main class="article">
        {{{labelHtml}}}
        <h1>{{title}}</h1>
        {{{bodyHtml}}}
      </main>
      {{#if hasSidebar}}
      <aside class="sidebar">
        {{{sidebarHtml}}}
      </aside>
      {{/if}}
    </div>
    {{> footer}}
    <script src="{{{assets.searchJs}}}" defer></script>
    <script src="{{{assets.metaTooltipsJs}}}" defer></script>
    <script src="{{{assets.tocJs}}}" defer></script>
  </body>
</html>
