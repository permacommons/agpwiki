<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="note">
  <info>
    <title>Agpedia Author-Date</title>
    <id>https://agp.wiki/styles/agpwiki-author-date</id>
    <updated>2026-01-15T00:00:00Z</updated>
  </info>

  <macro name="author">
    <names variable="author" et-al-min="5" et-al-use-first="4" and="text">
      <name name-as-sort-order="all" sort-separator=", " delimiter="; " />
      <et-al term="et-al" />
    </names>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year" />
      <date-part name="month" prefix="-" form="numeric-leading-zeros" />
      <date-part name="day" prefix="-" form="numeric-leading-zeros" />
    </date>
  </macro>

  <macro name="title">
    <text variable="title" />
  </macro>

  <macro name="container">
    <text variable="container-title" font-style="italic" />
  </macro>

  <macro name="publisher">
    <group delimiter=", ">
      <text variable="publisher" />
      <text variable="publisher-place" />
    </group>
  </macro>

  <macro name="online">
    <group delimiter=" ">
      <text variable="DOI" prefix="https://doi.org/" />
      <text variable="URL" />
    </group>
  </macro>

  <macro name="isbn">
    <text variable="ISBN" prefix="ISBN " />
  </macro>

  <citation>
    <layout>
      <group delimiter=" ">
        <choose>
          <if variable="author">
            <text macro="author" />
          </if>
          <else>
            <text macro="title" />
          </else>
        </choose>
        <choose>
          <if variable="issued">
            <text macro="issued" />
          </if>
        </choose>
      </group>
      <text macro="title" prefix=". " />
      <text macro="container" prefix=". " />
      <text macro="publisher" prefix=". " />
      <text macro="online" prefix=". " />
    </layout>
  </citation>

  <bibliography et-al-min="5" et-al-use-first="4">
    <layout suffix=".">
      <text macro="author" suffix=". " />
      <text macro="issued" suffix=". " />
      <text macro="title" suffix=". " />
      <text macro="container" suffix=". " />
      <text macro="publisher" suffix=". " />
      <text macro="isbn" suffix=". " />
      <text macro="online" />
    </layout>
  </bibliography>
</style>
